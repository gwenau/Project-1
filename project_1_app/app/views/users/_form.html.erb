<%= form_for @user do |f| %>
  <p>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p> 
    <%= f.label :profile_pic %>
    <%= f.file_field :profile_pic %>
  </p>
  <p>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.label :user_background_style %>
    <%= f.text_field :user_background_style %>
  </p>
  <p>
    <%= f.label :user_font_style %>
    <%= f.text_field  :user_font_style %>
  </p>
  <p>
    <%= f.label :user_font_color_style %>
    <%= f.text_field  :user_font_color_style %>
  </p>
  <%= f.submit %>
<% end %>

