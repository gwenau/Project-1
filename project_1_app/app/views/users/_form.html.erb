<%= form_for @user do |f| %>
  <div class="home">
    <p>
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p> 
      <%= f.label :image %>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.label :bio %>
      <%= f.text_area :bio %>
    </p>
    <p>
      <%= f.label :user_background_style %>
      <%= f.select :user_background_style, options_for_select([:default, :red, :green, :grey, :black, :white, :blue]) %>
    </p>
    <p>
      <%= f.label :user_font_color_style %>
      <%= f.select  :user_font_color_style, options_for_select([:default, :red, :green, :gray, :black, :white, :blue]) %>
    </p>
    <%= f.submit %>
  <% end %>
</div>
