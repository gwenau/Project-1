<h3><%= "List of Songs" %></h3>

<% if can? :create, Song %>
  <div class="home">
    <button><%= link_to 'Create', new_song_path %></button>Create New Song
  </div>
<% end %>

<br>
<div class="home">
    <% @songs.each do |song| %>
    <%= song.user.user_name %>
    <br>
    <%= link_to 'More', song.user %>
    <% if can? :edit, song.user %>
      <%= link_to 'Edit', edit_user_path(song) %> 
    <% end %>
    <% if can? :delete, song.user%>
      <%= link_to 'Destroy', song.user, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <br>
    <%= song.song_name %>
    <br>
    <%# if song.image.thumb %>
      <%= image_tag song.image.thumb, width: 200 %>
    <%# else %>

    <%# end %>
    <br>
    <%#= song.song_file %>
    <%= link_to 'Listen', song %>
    <% if can? :edit, song %>
      <%= link_to 'Edit', edit_song_path(song) %> 
    <% end %>
    <% if can? :delete, song %>
      <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <br>
    <br>
  <% end %>
</div>