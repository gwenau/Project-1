<h3><%= "List of Songs" %></h3>
<div class="home">
  <%= link_to 'Create', new_song_path %>
</div>
<br>
<div class="home">
  <% @songs.each do |song| %>
    <%#= user_id. Undefined local variable at the moment. %>
    <%= song.song_name %>
    <br>
    <%= image_tag song.image.thumb %>
    <br>
    <%#= song.song_file %>
    <br>
    <%= link_to 'Listen', song %>
    <% if can? :edit, song %>
      <%= link_to 'Edit', edit_song_path(song) %> 
    <% end %>
    <% if can? :delete, song %>
      <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <br>
    <br>
  <% end %>
</div>